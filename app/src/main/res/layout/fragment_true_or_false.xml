<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.TrueOrFalse">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="90sp"
            android:background="#00000000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/right"
            android:visibility="invisible"
            android:scaleType="centerInside"
            android:id="@+id/verycorrect"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="90sp"
            android:background="#00000000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/wrong"
            android:visibility="invisible"
            android:scaleType="centerInside"
            android:id="@+id/verywrong"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="90sp"
            android:background="#00000000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/awm"
            android:scaleType="centerInside"
            android:id="@+id/the_weapon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/weapon_name"
            android:layout_marginTop="10sp"
            android:text="Beryle"
            android:textSize="50sp"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/the_weapon"
            app:layout_constraintTop_toBottomOf="@id/the_weapon"/>

        <ImageButton
            android:layout_width="100sp"
            android:layout_height="80sp"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="50sp"
            android:background="@drawable/button_effect"
            android:src="@drawable/right"
            android:elevation="30sp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:clickable="true"
            android:id="@+id/yes"
            tools:targetApi="lollipop"
            android:focusable="true" />
        <ImageButton
            android:layout_width="100sp"
            android:layout_height="80sp"
            android:scaleType="fitXY"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="50sp"
            android:background="@drawable/wrong_button"
            android:src="@drawable/wrong"
            android:elevation="30sp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/no"
            tools:targetApi="lollipop" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>