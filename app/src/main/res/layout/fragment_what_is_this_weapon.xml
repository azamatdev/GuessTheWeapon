<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.WhatIsThisWeapon">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="90sp"
            android:background="#00000000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/right"
            android:visibility="invisible"
            android:scaleType="centerInside"
            android:id="@+id/yep"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="90sp"
            android:background="#00000000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/wrong"
            android:visibility="invisible"
            android:scaleType="centerInside"
            android:id="@+id/nope"/>
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="90sp"
        android:background="#00000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/spund"
        android:scaleType="centerInside"
        android:id="@+id/sound"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_margin="50sp"
            android:id="@+id/question"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sound"
            android:src="@drawable/question"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_margin="50sp"
            android:id="@+id/true_answer"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center"
            android:text="LALALALA"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:visibility="gone"
            android:textSize="35dp"
            app:layout_constraintTop_toBottomOf="@id/yep" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:hint="Name"
            android:id="@+id/weaponame"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="35sp"
            android:textAlignment="center"
            android:elevation="2dp"
            android:background="?selectableItemBackground"
            tools:targetApi="lollipop" />
        <ImageButton
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:scaleType="fitXY"
            android:src="@drawable/right"
            android:id="@+id/check"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintLeft_toRightOf="@id/weaponame"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="35sp"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>